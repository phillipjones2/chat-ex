
column(x, y)
  display flex
  flex-direction column

  if x == center
    align-items x
  else if x == stretch
    align-items x
  else if x == baseline
    align-items x
  else if x == start
    align-items flex-start
  else if x == end
    align-items flex-end

  if y == center
    justify-content y
  else if y == stretch
    justify-content y
  else if y == between
    justify-content space-between
  else if y == around
    justify-content space-around
  else if y == start
    justify-content flex-start
  else if y == end
    justify-content flex-end


// Create a flex row and specify
// the alignment and justification of children.
row(x, y)
  display flex
  flex-direction row

  if x == center
    justify-content x
  else if x == stretch
    justify-content x
  else if x == between
    justify-content space-between
  else if x == around
    justify-content space-around
  else if x == start
    justify-content flex-start
  else if x == end
    justify-content flex-end

  if y == center
    align-items y
  else if y == stretch
    align-items y
  else if y == baseline
    align-items y
  else if y == start
    align-items flex-start
  else if y == end
    align-items flex-end


