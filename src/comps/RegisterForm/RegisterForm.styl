@import '../../styles/variables'
@import '../../styles/mixins'
@import '../../styles/grid'

.RegisterForm
  contain(90%, 520px)
  column(start, start)
  marginCenter()
  mt(50px)
  pad(25px)
  box-shadow 0px 0px 5px rgba(0,0,0,0.25)

.RegisterForm form
  column(center, center)
  width 100%

.RegisterForm h3
  mb(10px)

.RegisterForm form input
  border 1px solid rgba(0,0,0,0.1)
  padding 15px 20px
  margin-bottom 20px
  font-size 2rem
  width 80%

.RegisterForm form p
  mb(10px)

.RegisterForm form button
  border-radius 4px
  background rgb(0,221,149)
  font-size 1.8rem
  font-family 'Lato', sans-serif
  font-weight 700
  text-transform uppercase
  color white
  padding 15px
  width 80%
  max-width 275px
