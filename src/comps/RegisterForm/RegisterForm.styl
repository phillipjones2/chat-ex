@import '../../styles/variables'
@import '../../styles/mixins'
@import '../../styles/grid'

.RegisterForm
  contain(90%, 520px)
  column(start, start)
  marginCenter()
  mt(50px)
  pad(25px)
  box-shadow 0px 0px 5px rgba(0,0,0,0.25)

.RegisterForm form
  column(center, center)

.RegisterForm h3
  mb(10px)

.RegisterForm form input
  border 1px solid rgba(0,0,0,0.1)
  padding 15px 20px
  margin-bottom 20px
  font-size 2rem
